{
  "dashboard": {
    "title": "CDN and Cache Performance",
    "tags": ["cdn", "cache", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(nginx_http_cache_hit_total[5m])) / sum(rate(nginx_http_cache_requests_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Hit Rate",
            "min": 0,
            "max": 100
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Low Cache Hit Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Cache Status Distribution",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by (status) (rate(nginx_http_cache_requests_total[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time by Cache Status",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{cache_status=\"HIT\"}[5m])) by (le))",
            "legendFormat": "p95 - Cache HIT",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{cache_status=\"MISS\"}[5m])) by (le))",
            "legendFormat": "p95 - Cache MISS",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time"
          }
        ]
      },
      {
        "id": 4,
        "title": "Bandwidth Saved by Cache",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(nginx_http_cache_bytes_total[5m])) * 8",
            "legendFormat": "Bandwidth Saved (bps)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bps",
            "label": "Bandwidth"
          }
        ]
      },
      {
        "id": 5,
        "title": "Cache Size",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "nginx_cache_size_bytes",
            "legendFormat": "Cache Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Size"
          }
        ]
      },
      {
        "id": 6,
        "title": "Top Cached Endpoints",
        "type": "table",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, sum by (path) (rate(nginx_http_cache_hit_total[5m])))",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "CDN Edge Locations",
        "type": "worldmap",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum by (country) (rate(http_requests_total[5m]))",
            "legendFormat": "{{country}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Evictions",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(nginx_cache_evictions_total[5m])",
            "legendFormat": "Evictions/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Cache Purge Operations",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(cache_purge_operations_total[5m])",
            "legendFormat": "Purges/sec",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
