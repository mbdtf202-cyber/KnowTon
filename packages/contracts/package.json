{
  "name": "@knowton/contracts",
  "version": "1.0.0",
  "description": "KnowTon 智能合约",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile",
    "compile": "hardhat compile && tsc",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist cache artifacts typechain-types",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "bash scripts/deploy-sepolia.sh",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network arbitrumGoerli",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network arbitrum",
    "configure:sepolia": "hardhat run scripts/configure-contracts.ts --network arbitrumSepolia",
    "verify:sepolia": "hardhat run scripts/verify.ts --network arbitrumSepolia",
    "check:deploy": "bash scripts/check-deployment-ready.sh",
    "test:deploy": "bash scripts/test-deployment-flow.sh",
    "audit": "bash scripts/security-audit.sh",
    "audit:slither": "slither . --config-file slither.config.json",
    "audit:mythril": "myth analyze contracts/IPBondSimple.sol --solv 0.8.20",
    "audit:echidna": "echidna test/echidna/IPBondFuzzing.sol --config echidna.config.yaml",
    "size": "hardhat size-contracts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "ethers": "^6.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "hardhat": "^2.19.2",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-deploy": "^1.0.4",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2"
  }
}
