{
  "name": "@knowton/contracts",
  "version": "1.0.0",
  "description": "KnowTon 智能合约",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile && tsc",
    "test": "hardhat test",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist cache artifacts typechain-types",
    "deploy:testnet": "hardhat deploy --network arbitrumGoerli",
    "deploy:mainnet": "hardhat deploy --network arbitrum",
    "verify": "hardhat verify --network arbitrum"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.1",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "hardhat": "^2.19.2",
    "hardhat-deploy": "^0.11.45",
    "typechain": "^8.3.2"
  }
}
